<% include partials/header %>

<div class="ui first container">
    <h1 class="ui header">Edit <%= blog.title %></h1>

    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input name="blog[title]" value="<%= blog.title %>" type="text">
        </div>
        
        <div class="field">
            <label>Image</label>
            <input name="blog[image]" value="<%= blog.image %>" type="text">
        </div>
        
        <div class="field">
            <label>Summary</label>
            <textarea rows="2" name="blog[summary]"><%= blog.summary %></textarea>
        </div>
        
        <div class="field">
            <label>Blog Content</label>
            <textarea rows="18" name="blog[body]"><%= blog.body %></textarea>
        </div>
        <button class="ui teal button" type="submit">Submit</button>
    </form>    
</div>

<% include partials/footer %>