<% include partials/header %>

<div class="ui first container">
    <h1 class="ui header">Add New</h1>

    <form class="ui form" action="/blogs" method="POST">
        
        <div class="field">
            <label>Title</label>
            <input name="blog[title]" placeholder="Title" type="text">
        </div>
        
        <div class="field">
            <label>Image</label>
            <input name="blog[image]" placeholder="Featured Image" type="text">
        </div>
        
        <div class="field">
            <label>Summary</label>
            <textarea rows="2" name="blog[summary]" placeholder="Summary"></textarea>
        </div>
        
        <div class="field">
            <label>Blog Content</label>
            <textarea rows="18" name="blog[body]"></textarea>
        </div>
        <button class="ui teal button" type="submit">Submit</button>
    </form>    
</div>

<% include partials/footer %>