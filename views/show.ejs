<% include partials/header %>

<div class="ui first container">
    <div class="ui piled segment">
        <h1 class="ui header"><%= blog.title %></h1>
        
        <div class="meta spacer"><%= moment(blog.created).format(dateFormat); %></div>
        
        <img class="featured spacer" src="<%= blog.image %>" alt="<%= blog.title %>">
        
        <div class="content spacer"><%- blog.body %></div>
        
        <div class="spacer">
            <a class="ui teal button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="inline">
                <button class="ui red right floated button">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>